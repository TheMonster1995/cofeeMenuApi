{
  "compilerOptions": {
    "target": "ES2020",                     // Which JS version to emit
    "module": "ES2020",                     // Keep it ESM
    "moduleResolution": "node",             // Resolve imports like Node.js
    "strict": true,                         // Enable all strict checks
    "esModuleInterop": true,                // For `import pkg from 'pkg'`
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                   // Skip typeâ€‘checking node_modules
    "resolveJsonModule": true,              // Allow import of JSON
    "outDir": "dist",                       // Where `tsc` will emit JS
    "rootDir": "src"                        // Your .ts source root
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
